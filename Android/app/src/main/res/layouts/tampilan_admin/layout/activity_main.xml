<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tampilan_admin.MainActivity"
    android:gravity="top"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginLeft="-20dp"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:background="@drawable/shape">
        </FrameLayout>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Di Aplikasi Pelapooran Pemadam Kebakaran"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </FrameLayout>

        <LinearLayout
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="675dp"
            android:clickable="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_datauser"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:paddingRight="10dp"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:clickable="false"
                        android:src="@drawable/team" />

                    <TextView
                        android:paddingRight="10dp"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:text="DAFTAR PELAPOR"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame_penerimaan_laporan"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:clickable="false"
                        android:src="@drawable/firereport" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:text="PENERIMAAN LAPORAN"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_penanganan_laporan"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:clickable="false"
                        android:src="@drawable/report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:text="PENANGANAN LAPORAN"
                        android:textStyle="bold" />
                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_lainnya"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/shape1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:src="@drawable/more" />

                    <TextView
                        android:paddingRight="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:text="SETTINGAN LAINNYA"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
</LinearLayout>
